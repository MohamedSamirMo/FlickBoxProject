<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- الخلفية الشفافة -->
            <corners android:radius="8dp"/> <!-- زوايا دائرية -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/budgetColor"/> <!-- اللون المخصص هنا -->
                <corners android:radius="8dp"/> <!-- زوايا دائرية -->
            </shape>
        </clip>
    </item>
</layer-list>
